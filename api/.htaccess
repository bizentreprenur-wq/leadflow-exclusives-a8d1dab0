# Enable CORS and routing for API
# IMPORTANT: CORS is handled dynamically by PHP in includes/functions.php
# using ALLOWED_ORIGINS configuration - do NOT set wildcard here
<IfModule mod_headers.c>
    # Remove any existing CORS headers to let PHP handle them
    Header unset Access-Control-Allow-Origin
    Header always set Access-Control-Allow-Methods "POST, GET, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type, Authorization, X-Cron-Secret"
</IfModule>

# Handle OPTIONS preflight requests
RewriteEngine On
RewriteCond %{REQUEST_METHOD} OPTIONS
RewriteRule ^(.*)$ $1 [R=200,L]

# Disable output buffering for SSE streaming endpoints
<Files "gmb-search-stream.php">
    # Disable compression for SSE
    SetEnv no-gzip 1
    SetEnvIfNoCase Request_URI "\.php$" no-gzip
</Files>

# Protect config file
<Files "config.php">
    Order allow,deny
    Deny from all
</Files>

# Protect includes directory
<IfModule mod_rewrite.c>
    RewriteRule ^includes/ - [F,L]
</IfModule>

# Protect cache directory  
<IfModule mod_rewrite.c>
    RewriteRule ^cache/ - [F,L]
</IfModule>

# Enable compression for JSON responses (except SSE)
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE application/json
    # Exclude text/event-stream from compression
    SetEnvIfNoCase Content-Type text/event-stream no-gzip
</IfModule>

# Error handling
ErrorDocument 404 /api/error.php
ErrorDocument 500 /api/error.php