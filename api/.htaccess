# Enable CORS and routing for API
# IMPORTANT: CORS is handled dynamically by PHP in includes/functions.php
# using ALLOWED_ORIGINS configuration - do NOT set wildcard here
<IfModule mod_headers.c>
    # Do NOT unset Access-Control-Allow-Origin.
    # PHP sets it dynamically per-request (including Lovable preview origins).
    # Unsetting it here removes the header from PHP responses and breaks CORS.
    Header always set Access-Control-Allow-Methods "POST, GET, OPTIONS"
    Header always set Access-Control-Allow-Headers "Content-Type, Authorization, X-Cron-Secret"
</IfModule>

# IMPORTANT:
# Do NOT short-circuit OPTIONS at the Apache layer.
# Our PHP endpoints call setCorsHeaders() + handlePreflight() which sets
# Access-Control-Allow-Origin dynamically (including Lovable preview domains).
# If Apache returns 200 for OPTIONS without passing through PHP, the response
# will miss the dynamic Allow-Origin header and browsers will block requests.
RewriteEngine On

# Disable output buffering for SSE streaming endpoints
<Files "gmb-search-stream.php">
    # Disable compression for SSE
    SetEnv no-gzip 1
    SetEnvIfNoCase Request_URI "\.php$" no-gzip
</Files>

# Protect config file
<Files "config.php">
    Order allow,deny
    Deny from all
</Files>

# Protect includes directory
<IfModule mod_rewrite.c>
    RewriteRule ^includes/ - [F,L]
</IfModule>

# Protect cache directory  
<IfModule mod_rewrite.c>
    RewriteRule ^cache/ - [F,L]
</IfModule>

# Enable compression for JSON responses (except SSE)
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE application/json
    # Exclude text/event-stream from compression
    SetEnvIfNoCase Content-Type text/event-stream no-gzip
</IfModule>

# Error handling
ErrorDocument 404 /api/error.php
ErrorDocument 500 /api/error.php