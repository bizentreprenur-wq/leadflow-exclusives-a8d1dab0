# BamLead routing for Hostinger (Apache)
# Split deploy:
# - Backend PHP API lives in /public_html/api/
# - Frontend build lives in /public_html/frontend/

<IfModule mod_rewrite.c>
  RewriteEngine On
  RewriteBase /

  # Never rewrite API requests
  RewriteRule ^api(/.*)?$ - [L]

  # Don't rewrite existing files or directories
  RewriteCond %{REQUEST_FILENAME} -f [OR]
  RewriteCond %{REQUEST_FILENAME} -d
  RewriteRule ^ - [L]

  # SPA fallback (everything else goes to the frontend app)
  RewriteRule ^ frontend/index.html [L]
</IfModule>

