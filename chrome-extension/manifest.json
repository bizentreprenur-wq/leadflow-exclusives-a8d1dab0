{
  "manifest_version": 3,
  "name": "BamLead - Lead Prospecting",
  "version": "1.1.0",
  "description": "Find and capture leads from any website. Extract contact info, analyze websites, and save directly to BamLead. Works on Chrome, Edge, Brave, Opera, and all Chromium browsers.",
  "permissions": [
    "activeTab",
    "storage",
    "scripting"
  ],
  "action": {
    "default_popup": "popup.html",
    "default_title": "BamLead Lead Extractor",
    "default_icon": {
      "16": "icon16.png",
      "32": "icon32.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  },
  "icons": {
    "16": "icon16.png",
    "32": "icon32.png",
    "48": "icon48.png",
    "128": "icon128.png"
  },
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "browser_specific_settings": {
    "gecko": {
      "id": "extension@bamlead.com",
      "strict_min_version": "109.0"
    }
  }
}